    "immutable": "^5.0.0-beta.4",
    "lodash.debounce": "^4.0.8",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.0",
    "morgan": "^1.10.0",
    "next": "^14.1.0",
    "next-auth": "^4.24.5",
