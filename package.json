{
  "name": "quintro",
  "version": "0.0.1",
  "description": "Classic marble game",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "api:dev": "nodemon ./server/api/index.js",
    "socket:dev": "nodemon ./server/socket/index.js",
    "i18n:extract": "formatjs extract 'app/**/!(*.test)*.{ts,tsx}' --ignore 'app/**/*.d.ts' --out-file app/translations/messages.json",
    "i18n:compile": "formatjs compile app/translations/messages.json --out-file app/translations/en.json",
    "i18n": "npm run i18n:extract && npm run i18n:compile",
    "build:shared": "tsc -p ./shared-lib/tsconfig.json",
    "prebuild": "npm run build:shared"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/turnerhayes/quintro.git"
  },
  "keywords": [
    "game",
    "marble",
    "online",
    "multiplayer"
  ],
  "author": "Turner Hayes <dev@turnerhayes.com>",
  "license": "ISC",
  "bugs": {
