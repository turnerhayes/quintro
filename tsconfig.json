{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@shared/*": [
        "./shared-lib/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@server/*": [
        "./server/*"
      ]
    },
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/api/socket/route.ts.bak"
  ],
  "exclude": [
    "node_modules"
  ]
}
