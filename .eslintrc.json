{
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 7
	},
	"env": {
		"node": true
	},
	"rules": {
		"strict": "error",
		"no-use-before-define": "error",
		"curly": "error",
		"eqeqeq": "error",
		"dot-notation": "error",
		"no-var": "error",
		"no-caller": "error",
		"guard-for-in": "warn",
		"no-eq-null": "error",
		"no-console": "warn",
		"no-lone-blocks": "error",
		"no-magic-numbers": [
			"warn",
			{
				"ignore": [
					-1,
					0,
					1
				],
				"ignoreArrayIndexes": true
			}
		],
		"quotes": [
			"error",
			"double",
			{
				"allowTemplateLiterals": true,
				"avoidEscape": true
			}
		],
		"quote-props": ["warn", "as-needed"],
		"semi": ["error", "always"],
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"no-debugger": "warn"
	},
	"overrides": [
		{
			"files": "**/*.test.js",
			"env": {
				"jest": true
			}
		}
	]
}
